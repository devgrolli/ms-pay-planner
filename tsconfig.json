{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "commonjs",
    "outDir": "dist",
    "types": ["jest", "node"],
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
